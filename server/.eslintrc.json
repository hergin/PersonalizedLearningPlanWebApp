{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": { "project": ["./tsconfig.json"] },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "node_modules",
        "request_testing",
        ".env",
        "tests/**/*.test.ts"
    ]
}
