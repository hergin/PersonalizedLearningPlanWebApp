{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2018",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es5", "es6", "dom"],
        "paths": {
            "@server/*": ["./*"]
        }
    },
    "typeRoots": [
        "custom_typing",
        "node_modules/@types"
    ]
}
