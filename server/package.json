{
    "name": "learning-plan-web-app-server",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jest": "^29.5.0",
        "jsonwebtoken": "^9.0.2",
        "nodemon": "^3.0.1",
        "pg": "^8.11.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "scripts": {
        "dev": "nodemon app.ts",
        "test": "jest --testPathPattern=tests --detectOpenHandles --coverage"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/preset-env": "^7.23.3",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/pg": "^8.10.9",
        "babel-jest": "^29.7.0",
        "ts-jest": "^29.1.1"
    },
    "jest": {
        "transform": {
            "^.+\\.m?[tj]sx?$": ["ts-jest"]
        },
        "verbose": true,
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
